<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Münzinghof Calendar</title>

  <!-- PWA -->
  <link rel="manifest" href="data:application/manifest+json,{
    \"name\": \"Münzinghof Calendar\",
    \"short_name\": \"MH Calendar\",
    \"start_url\": \".\",
    \"display\": \"standalone\",
    \"background_color\": \"#003366\",
    \"theme_color\": \"#FFD700\",
    \"icons\": [
      {\"src\": \"https://www.muenzinghof.de/images/design/logo-schild-260@2x.png\", \"sizes\": \"260x260\", \"type\": \"image/png\"}
    ]
  }" />

  <style>
    :root {
      --primary: #003366;
      --gold: #FFD700;
      --light: #f8f9fa;
      --dark: #212529;
    }

    * { box-sizing: border-box; margin: 0; padding: 0; }

    html, body {
      height: auto;
      min-height: 100vh;
      overflow-y: auto !important;
      -webkit-overflow-scrolling: touch;
    }

    body {
      font-family: 'Segoe UI', Tahoma, sans-serif;
      background: 
        linear-gradient(rgba(0, 51, 102, 0.85), rgba(0, 31, 63, 0.9)),
        url('https://images.unsplash.com/photo-1506784365847-bbad939e9335?auto=format&fit=crop&w=1350&q=80') center/cover fixed;
      color: white;
      text-align: center;
      display: flex;
      flex-direction: column;
      padding: 20px 0;
    }

    .container {
      max-width: 420px;
      margin: 20px auto;
      background: rgba(255, 255, 255, 0.98);
      color: var(--dark);
      padding: 32px;
      border-radius: 24px;
      box-shadow: 0 20px 40px rgba(0,0,0,0.3);
      border: 1px solid rgba(255, 215, 0, 0.3);
      z-index: 1;
    }

    .logo {
      width: 200px;
      height: auto;
      max-height: 120px;
      margin: 0 auto 20px;
      display: block;
      border-radius: 16px;
      border: 6px solid var(--gold);
      box-shadow: 0 8px 20px rgba(0,0,0,0.3);
      background: white;
      padding: 8px;
    }

    h1 { color: var(--primary); margin: 12px 0; font-size: 1.8em; font-weight: 700; }
    .subtitle { color: var(--gold); font-weight: bold; margin-bottom: 24px; font-size: 1.15em; }

    .lang-selector { display: flex; justify-content: center; gap: 14px; margin: 20px 0 30px; }
    .lang-btn { background: white; border: 3px solid var(--gold); border-radius: 14px; width: 56px; height: 56px; display: flex; align-items: center; justify-content: center; cursor: pointer; transition: all 0.3s; }
    .lang-btn img { width: 40px; height: 40px; border-radius: 10px; }
    .lang-btn.active { background: var(--gold); transform: scale(1.25); box-shadow: 0 6px 15px rgba(255, 215, 0, 0.5); }

    .form-group { margin-bottom: 20px; text-align: left; }
    label { display: block; margin-bottom: 8px; font-weight: 600; color: var(--primary); font-size: 1.1em; }
    input, select { width: 100%; padding: 15px; border: 2px solid #ccc; border-radius: 14px; font-size: 1.1em; background: #fff; color: #333; }
    input:focus, select:focus { outline: none; border-color: var(--gold); box-shadow: 0 0 0 4px rgba(255, 215, 0, 0.25); }
    select { appearance: none; background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='%23FFD700'%3e%3cpath d='M7 10l5 5 5-5z'/%3e%3c/svg%3e"); background-repeat: no-repeat; background-position: right 15px center; background-size: 18px; cursor: pointer; }

    button { width: 100%; padding: 16px; margin: 14px 0; border: none; border-radius: 14px; font-size: 1.2em; font-weight: bold; cursor: pointer; transition: 0.3s; }
    #btnGenerar { background: var(--primary); color: white; }
    #btnGenerar:hover { background: #002244; transform: translateY(-3px); }
    .btn-add { background: #28a745 !important; color: white; }
    .btn-add:hover { background: #218838 !important; }
    .hidden { display: none; }

    footer { margin-top: 30px; padding: 16px; font-size: 0.95em; color: rgba(255,255,255,0.9); z-index: 1; }
    .dev { margin-top: 10px; font-weight: bold; color: var(--gold); }

    @media (max-width: 480px) { .container { margin: 15px; padding: 25px; } .logo { width: 170px; } }
  </style>
</head>
<body>

  <div class="container">
    <img src="https://www.muenzinghof.de/images/design/logo-schild-260@2x.png" alt="Münzinghof" class="logo">

    <h1 data-t="title">Termin hinzufügen</h1>
    <p class="subtitle" data-t="subtitle">Münzinghof Veranstaltungen</p>

    <div class="lang-selector">
      <button class="lang-btn" data-lang="es" title="Español"><img src="https://flagcdn.com/es.svg" alt="ES"></button>
      <button class="lang-btn" data-lang="en" title="English"><img src="https://flagcdn.com/gb.svg" alt="EN"></button>
      <button class="lang-btn active" data-lang="de" title="Deutsch"><img src="https://flagcdn.com/de.svg" alt="DE"></button>
    </div>

    <div class="form-group">
      <label data-t="label_month">Monat:</label>
      <select id="mes"></select>
    </div>

    <div class="form-group">
      <label data-t="label_day">Tag:</label>
      <input type="number" id="dia" min="1" max="31" placeholder="1-31" />
    </div>

    <div class="form-group">
      <label data-t="label_event">Veranstaltung:</label>
      <input type="text" id="actividad" placeholder="z.B. Jugendtreffen" />
    </div>

    <button id="btnGenerar" data-t="generate">LINK GENERIEREN</button>

    <div id="resultado" class="hidden">
      <p data-t="click_to_add"><strong>Klicken zum Hinzufügen:</strong></p>
      <button id="botonCalendario" class="btn-add" data-t="add_to_calendar">ZUM KALENDER HINZUFÜGEN</button>
    </div>
  </div>

  <footer>
    <div data-t="compatible">Funciona en Windows, Mac, Android, iOS y Linux</div>
    <div class="dev" data-t="developed_by">Entwickelt von: Anthony Oscar Falcones Alcívar</div>
  </footer>

  <script>
    const trad = {
      es: {
        title: "Gente Jóven", subtitle: "Agregar Evento",
        label_month: "Mes:", label_day: "Día:", label_event: "Evento:",
        months: ["Selecciona un mes", "Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre"],
        generate: "GENERAR ENLACE", click_to_add: "<strong>Haz clic para agregar:</strong>", add_to_calendar: "AÑADIR AL CALENDARIO",
        compatible: "Funciona en Windows, Mac, Android, iOS y Linux", developed_by: "Desarrollado por: Anthony Oscar Falcones Alcívar"
      },
      en: {
        title: "Young People", subtitle: "Add Event",
        label_month: "Month:", label_day: "Day:", label_event: "Event:",
        months: ["Select a month", "January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"],
        generate: "GENERATE LINK", click_to_add: "<strong>Click to add:</strong>", add_to_calendar: "ADD TO CALENDAR",
        compatible: "Works on Windows, Mac, Android, iOS & Linux", developed_by: "Developed by: Anthony Oscar Falcones Alcívar"
      },
      de: {
        title: "Junge Leute", subtitle: "Termin hinzufügen",
        label_month: "Monat:", label_day: "Tag:", label_event: "Veranstaltung:",
        months: ["Monat wählen", "Januar", "Februar", "März", "April", "Mai", "Juni", "Juli", "August", "September", "Oktober", "November", "Dezember"],
        generate: "LINK GENERIEREN", click_to_add: "<strong>Klicken zum Hinzufügen:</strong>", add_to_calendar: "ZUM KALENDER HINZUFÜGEN",
        compatible: "Funktioniert auf Windows, Mac, Android, iOS & Linux", developed_by: "Entwickelt von: Anthony Oscar Falcones Alcívar"
      }
    };

    let lang = localStorage.getItem('lang') || 'de';
    const diasPorMes = [0, 31, 29, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31]; // Febrero: 29

    function updateMonths() {
      const select = document.getElementById('mes');
      select.innerHTML = '';
      trad[lang].months.forEach((mes, i) => {
        const opt = document.createElement('option');
        opt.value = i; opt.textContent = mes;
        if (i === 0) { opt.disabled = true; opt.selected = true; }
        select.appendChild(opt);
      });
      updateMaxDay();
    }

    function updateMaxDay() {
      const mes = parseInt(document.getElementById('mes').value) || 0;
      const diaInput = document.getElementById('dia');
      const max = diasPorMes[mes] || 31;
      diaInput.max = max;
      if (parseInt(diaInput.value) > max) diaInput.value = '';
    }

    function updateUI() {
      document.querySelectorAll('[data-t]').forEach(el => {
        const key = el.getAttribute('data-t');
        if (key !== 'months') el.innerHTML = trad[lang][key];
      });
      document.getElementById('actividad').placeholder = trad[lang].label_event.replace(':', '') + '...';
      updateMonths();
      document.querySelectorAll('.lang-btn').forEach(b => b.classList.toggle('active', b.dataset.lang === lang));
    }

    updateUI();

    document.querySelectorAll('.lang-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        lang = btn.dataset.lang;
        localStorage.setItem('lang', lang);
        updateUI();
      });
    });

    document.getElementById('mes').addEventListener('change', updateMaxDay);

    document.getElementById('btnGenerar').addEventListener('click', () => {
      const mes = parseInt(document.getElementById('mes').value);
      const dia = parseInt(document.getElementById('dia').value);
      const act = document.getElementById('actividad').value.trim();

      if (!mes || !dia || !act || dia > diasPorMes[mes]) {
        alert("Tag ungültig für diesen Monat!");
        return;
      }

      const hoy = new Date();
      let anio = hoy.getFullYear();
      let fecha = new Date(anio, mes - 1, dia);
      if (fecha < hoy) anio++;
      fecha = new Date(anio, mes - 1, dia);
      const fin = new Date(anio, mes - 1, dia + 1);

      const f = d => d.toISOString().slice(0,10).replace(/-/g,'');
      const url = `https://calendar.google.com/calendar/render?action=TEMPLATE&text=${encodeURIComponent(act)}&dates=${f(fecha)}/${f(fin)}&ctz=Europe/Berlin`;
      const webcal = url.replace('https://', 'webcal://');

      const btn = document.getElementById('botonCalendario');
      btn.onclick = () => location.href = webcal;
      document.getElementById('resultado').classList.remove('hidden');
    });
  </script>
</body>
</html>
